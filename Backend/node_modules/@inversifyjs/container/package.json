{
  "author": "Remo H. Jansen",
  "bugs": {
    "url": "https://github.com/inversify/monorepo/issues"
  },
  "description": "InversifyJs container",
  "dependencies": {
    "@inversifyjs/common": "1.5.2",
    "@inversifyjs/core": "5.3.3",
    "@inversifyjs/plugin": "0.2.0",
    "@inversifyjs/reflect-metadata-utils": "1.2.0"
  },
  "devDependencies": {
    "@stryker-mutator/core": "9.0.1",
    "@stryker-mutator/vitest-runner": "9.0.1",
    "@stryker-mutator/typescript-checker": "9.0.1",
    "@types/node": "22.15.33",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "9.29.0",
    "prettier": "3.6.0",
    "rimraf": "6.0.1",
    "rollup": "4.44.0",
    "ts-loader": "9.5.2",
    "tslib": "2.8.1",
    "typescript": "5.8.3",
    "vitest": "3.2.4"
  },
  "peerDependencies": {
    "reflect-metadata": "~0.2.2"
  },
  "devEngines": {
    "node": "^22.10.2",
    "pnpm": "^9.12.1"
  },
  "homepage": "https://inversify.io",
  "keywords": [
    "dependency injection",
    "dependency inversion",
    "di",
    "inversion of control container",
    "ioc",
    "javascript",
    "node",
    "typescript"
  ],
  "license": "MIT",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "exports": {
    ".": {
      "import": "./lib/esm/index.js",
      "require": "./lib/cjs/index.js"
    }
  },
  "name": "@inversifyjs/container",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inversify/monorepo.git"
  },
  "version": "1.10.3",
  "scripts": {
    "build": "pnpm run build:cjs && pnpm run build:esm",
    "build:cjs": "tsc --build tsconfig.cjs.json && pnpm exec foundation-ts-package-cjs ./lib/cjs",
    "build:esm": "rollup -c ./rollup.config.mjs && pnpm exec foundation-ts-package-esm ./lib/esm",
    "build:clean": "rimraf lib",
    "format": "prettier --write ./src",
    "lint": "eslint ./src",
    "prebuild": "pnpm run build:clean",
    "test": "vitest run",
    "test:integration": "pnpm run test --project Integration",
    "test:coverage": "pnpm run test:unit --coverage",
    "test:mutation": "stryker run",
    "test:uncommitted": "pnpm run test --changed=HEAD",
    "test:unit": "pnpm run test --project Unit"
  }
}